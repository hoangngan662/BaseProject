@model ClinicProject.ChiTietDV

@{
    ViewBag.Title = "AddResult";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/Assets/Admin/css/pages/specialists.css" rel="stylesheet" />
    <link href="~/Assets/Admin/css/pages/patients.css" rel="stylesheet" />
}

<div class="section title-section">
    <h3 class="title">Xử lý dịch vụ</h3>
    <hr />
</div>

<div class="section justify-content-between">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2" for="ID_PhieuKham">Mã phiếu khám</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ID_PhieuKham, new { htmlAttributes = new { @class = "form-control", @disabled = true } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="BacSi">Bác sĩ chỉ định</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" type="text" value="@Model.PhieuKham.LichKham.NhanVien.HoTen" disabled>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="BenhNhan">Bệnh nhân</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" type="text" value="@Model.PhieuKham.LichKham.BenhNhan.HoTen" disabled>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ID_DichVu">Dịch vụ</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" type="text" value="@Model.DichVu.TenDichVu" disabled>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ThoiGian">Thời gian</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" type="datetime" value="@Convert.ToDateTime(Model.PhieuKham.ThoiGian)" disabled>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="KetQua">Kết quả</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KetQua, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

