@model IEnumerable<ClinicProject.ChuyenMon>

@{
    ViewBag.Title = "Doctor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section Styles{
    <link href="~/Assets/Admin/css/pages/specialists.css" rel="stylesheet" />
    <link href="~/Assets/Admin/css/pages/style.css" rel="stylesheet" />
}

<div class="section title-section">
    <h3 class="title">Bác sĩ</h3>
</div>
<div class="section filters-section justify-content-between">
    <div class="dropdowns-wrapper">
        <div class="dropdown">
            <a class="btn btn-dark-red-o dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">filter</a>
            <div class="dropdown-menu shadow-lg" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#">name</a>
                <a class="dropdown-item" href="#">gender</a>
                <a class="dropdown-item" href="#">specialization</a>
                <a class="dropdown-item" href="#">email</a>
                <a class="dropdown-item" href="#">phone no.</a>
                <a class="dropdown-item" href="#">address</a>
            </div>
        </div>
        <div class="dropdown"><a class="btn btn-dark-red-o dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">sort by</a><div class="dropdown-menu shadow-lg" aria-labelledby="dropdownMenuLink"><a class="dropdown-item" href="#">name</a><a class="dropdown-item" href="#">gender</a><a class="dropdown-item" href="#">specialization</a><a class="dropdown-item" href="#">email</a><a class="dropdown-item" href="#">phone no.</a><a class="dropdown-item" href="#">address</a></div></div>
    </div>
    <div class="buttons-wrapper">
        <button class="btn btn-dark-red-f-gr">
            <i class="las la-plus-circle"></i>
            Thêm nhân viên
        </button>
    </div>
</div>
<div class="section specialists-table-view">
    <table class="table table-hover table-responsive-lg">
        <thead>
            <tr>
                <th>Họ và tên</th>
                <th>Giới tính</th>
                <th>Chuyên khoa</th>
                <th>Chức danh</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="rounded-circle mr-1" src="~/Assets/Admin/images/doctor (1).svg" loading="lazy" />
                        <span class="ml-2">@item.NhanVien.HoTen</span>
                    </td>

                    @{string gender = "Nữ";
                        if (item.NhanVien.GioiTinh == true)
                        {
                            gender = "Nam";
                        }
                    }
                    <td class="text-muted">@gender</td>

                    <td>
                        @{
                            var ck = "";
                            if (item.ChuyenKhoa != null)
                            {
                                ck = item.ChuyenKhoa;
                            }

                        }
                        @ck
                    </td>
                    <td class="text-muted">
                        @{
                            var cd = "";
                            if (item.ChucDanh != null)
                            {
                                cd = item.ChucDanh;
                            }

                        }
                        @cd
                    </td>
                    <td>
                        <button class="btn btn-sm btn-dark-red-f">lịch hẹn</button>
                        <a href="@Url.Action("DoctorSpecialize","Employee", new { id = item.ID_NhanVien })" class="btn btn-sm btn-dark-blue-f">
                            <i class="las la-edit"></i>
                            sửa
                        </a>
                    </td>
                    <td><a href=""><i class="las la-ellipsis-h"></i></a></td>
                </tr>
            }

        </tbody>
    </table>
