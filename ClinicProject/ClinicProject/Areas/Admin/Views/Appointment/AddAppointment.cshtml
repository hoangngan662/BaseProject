@model ClinicProject.LichKham

@{
    ViewBag.Title = "AddAppointment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/Assets/Admin/css/pages/specialists.css" rel="stylesheet" />
    <link href="~/Assets/Admin/css/pages/patients.css" rel="stylesheet" />
}

<div class="section title-section">
    <h3 class="title">Thêm lịch hẹn</h3>
    <hr />
</div>

<div class="section justify-content-between">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="BenhNhan">Bệnh nhân</label>
            <div class="col-md-10">
                @Html.DropDownList("ID_BenhNhan", (SelectList)ViewBag.patient, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="BacSi">Bác sĩ</label>
            <div class="col-md-10">
                @Html.DropDownList("ID_BacSi", (SelectList)ViewBag.doctor, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="ChuDe">Chủ đề</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="MoTa">Mô tả</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="form-group">
            <label class="control-label col-md-2" for="ThoiGian">Thời gian</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-date="The field ThoiGian must be a date." id="ThoiGian" name="ThoiGian" type="datetime-local" value="@Convert.ToDateTime(DateTime.Today).ToString("yyyy-MM-dd")T10:00">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
